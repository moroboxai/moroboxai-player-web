{
    "compilerOptions": {
        "module": "ES6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib/es",
        "baseUrl": ".",
        "declaration": true,
        "strict": true,
        "stripInternal": true,
        "lib": ["es5", "es6", "dom"],
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ]
}